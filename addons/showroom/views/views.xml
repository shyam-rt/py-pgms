<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="showroom.list">
      <field name="name">showroom list</field>
      <field name="model">showroom.showroom</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Bike_Name"/>
          <field name="Cost"/>
          <field name="Customer_Name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="showroom.action_window">
      <field name="name">showroom window</field>
      <field name="res_model">showroom.showroom</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="showroom.action_server">
      <field name="name">showroom server</field>
      <field name="model_id" ref="model_showroom_showroom"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="showroom" id="showroom.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="showroom.menu_1" parent="showroom.menu_root"/>
    <menuitem name="Menu 2" id="showroom.menu_2" parent="showroom.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="showroom.menu_1_list" parent="showroom.menu_1"
              action="showroom.action_window"/>
    <menuitem name="Server to list" id="showroom" parent="showroom.menu_2"
              action="showroom.action_server"/>

  </data>
</odoo>
